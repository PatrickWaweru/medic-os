#!/bin/sh

wait_for_passwd_file()
{
  local passwd_file="$1"

  while ! [ -f "$passwd_file" ]; do
    sleep 5
  done

  return 0
}

start()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../../medic-core/env" &&
  merge_environment /srv &&
  \
  source "$base/../env" &&
  merge_environment /srv &&
  \
  local passwd_file="$PACKAGE_STORAGE/../medic-rdbms/passwd/postgresql" &&
  wait_for_passwd_file "$passwd_file" &&
  \
  local logs="$PACKAGE_STORAGE/logs" &&
  local couch2pg_cmd="node '$PACKAGE_ROOT/index.js'"
  \
  exec nohup su -c "exec $couch2pg_cmd" postgresql \
    >> "$logs/startup.log" 2>&1
}

main()
{
  start
  return "$?"
}

main
exit "$?"

