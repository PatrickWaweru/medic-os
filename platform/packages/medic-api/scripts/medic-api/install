#!/bin/sh

source '/boot/include/utility'
source '/boot/include/hypervisor'

install()
{
  local is_update="$1"
  shift 1

  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../horticulturalist/env" &&
  merge_environment /srv || return 255

  source "$base/env" &&
  merge_environment /srv || return 255

  if [ "$is_update" ]; then
    echo "Updating version $PACKAGE_VERSION"
    return 0
  fi

  echo "Installing version $PACKAGE_VERSION"

  mkdir -p "$PACKAGE_STORAGE/logs" &&
  mkdir -p "$PACKAGE_SOFTWARE/current" &&
  chown -R "$HORTICULTURALIST_UID:medic-api" "$PACKAGE_SOFTWARE"
  \
  create_system_group_if_necessary medic-api "$MEDIC_API_GID" &&
  \
  create_system_user_if_necessary \
    medic-api "$MEDIC_API_UID" 'Medic API Process Account' medic-api

  return "$?"
}

install "$@"
exit "$?"
