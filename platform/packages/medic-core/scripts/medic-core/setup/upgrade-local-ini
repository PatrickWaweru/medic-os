#!/bin/sh

main()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  local source_path="$PACKAGE_SETTINGS/couchdb/private/upgrade-admins.ini"
  local target_path="$PACKAGE_SETTINGS/couchdb/local.ini"

  if [ -f "$source_path" ]; then
    touch "$target_path" &&
    chmod 0640 "$target_path" &&
    chown couchdb:staff "$target_path" &&
    cat "$source_path" >> "$target_path" &&
    rm -f "$source_path"
  fi

  return "$?"
}

main "$@"
exit "$?"

