#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  exec "$PACKAGE_ROOT/bin/nginx" -p "$PACKAGE_STORAGE/nginx/data" 2>&1 \
    | /boot/timestamp \
    >> "$PACKAGE_STORAGE/nginx/logs/startup.log"
}

start
exit "$?"

