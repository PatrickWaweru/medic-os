#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  cd "$PACKAGE_ROOT" &&
  local command_line="`which couchdb`" &&
  \
  exec /boot/timestamp \
    su -c "exec $command_line" couchdb \
      >> "$PACKAGE_STORAGE/couchdb/logs/startup.log" 2>&1
}

start
exit "$?"

