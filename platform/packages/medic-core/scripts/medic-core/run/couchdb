#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  cd "$PACKAGE_ROOT" &&
  exec su -c 'exec bin/couchdb' couchdb 2>&1 \
    | /boot/timestamp \
    >> "$PACKAGE_STORAGE/couchdb/logs/startup.log"
}

start
exit "$?"

