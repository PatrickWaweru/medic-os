#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../../medic-core/env" &&
  merge_environment /srv &&
  source "$base/../env" &&
  merge_environment /srv || return 255

  exec node "$PACKAGE_ROOT/server.js" 2>&1 \
    | /boot/timestamp \
    >> "$PACKAGE_STORAGE/logs/startup.log"
}

main()
{
  start
  return "$?"
}

main
exit "$?"

